---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" type="text/css" href="/Estilos/genericstyles.css">
		<title>{title}</title>
	</head>
	<body>
		<header>
			<a href="home">
				<h1>Smart Ticket</h1>
				
			</a>
			
			<div class="loggedCt">
				<a href="/cajas">Cajas</a>
				<a href="/usuarios">Usuarios</a>
				<a href="/estadisticas">Estadisticas</a>
				<a href="/login" id="closeSesion">Cerrar Sesi√≥n</a>]
			</div>
		</header>
		<slot/>
	</body>
	<script is:inline>
		let closeSesion = document.getElementById('closeSesion');
		let LoggedCt = document.querySelector('.loggedCt');
		let userId = sessionStorage.getItem('IdUsuario');
		if (userId) {
			closeSesion.style.visibility = 'visible';
			LoggedCt.style.visibility = 'visible';
		}
		else {
			closeSesion.style.visibility = 'hidden';
			LoggedCt.style.visibility = 'hidden';
		}
		closeSesion.addEventListener('click', () => {
			sessionStorage.removeItem('token');
			sessionStorage.removeItem('IdUsuario');
			window.location.href = '/login';
		});
	</script>
</html>
<style is:global>
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	header {
		display: flex;
		justify-content: space-between;
	}
</style>
